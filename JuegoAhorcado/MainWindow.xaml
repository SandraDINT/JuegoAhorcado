<Window x:Class="JuegoAhorcado.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:JuegoAhorcado"
        mc:Ignorable="d"
        Title="Juego del ahorcado"
        Height="450"
        Width="600"
        MinHeight="450"
        MinWidth="600"
        Icon="Assets/icon.ico">
    <DockPanel>
        <!--StackPanel botones de abajo-->
        <StackPanel Orientation="Horizontal"
                    DockPanel.Dock="Bottom"
                    Margin="5">
            <Button Content="Nueva partida" />
            <Button Content="Rendirse" />
        </StackPanel>
        <!--Imagen ahorcado-->
        <Image x:Name="imageAhorcado"
            DockPanel.Dock="Left"
               Source="Assets/4.jpg"
               Margin="5" />
        <!--Texto ahorcado-->
        <TextBlock
            Text="Ahorcado"
                   HorizontalAlignment="Center"
                   FontSize="40"
                   DockPanel.Dock="Top" />
        <!--Zona de juego-->
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition></RowDefinition>
                <RowDefinition Height="2*"></RowDefinition>
            </Grid.RowDefinitions>

            <!--TextBlock palabra a adivinar-->
            <ScrollViewer HorizontalScrollBarVisibility="Visible"
                          VerticalScrollBarVisibility="Hidden">
                <WrapPanel x:Name="wrapPanelPalabraAAdivinar">

                </WrapPanel>
            </ScrollViewer>

            <!--Teclado ahorcado-->
            <UniformGrid x:Name="uniformGridLetras"
                         Grid.Row="1">

            </UniformGrid>
        </Grid>
    </DockPanel>
</Window>
